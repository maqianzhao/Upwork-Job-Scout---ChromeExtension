{
  "manifest_version": 3,
  "name": "Upwork Job Scout",
  "version": "0.1.11",
  "description": "Best matches list+detail scraper for Upwork (local only).",
  "permissions": ["storage", "downloads", "activeTab", "scripting"],
  "host_permissions": ["https://www.upwork.com/*"],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.upwork.com/*"],
      "js": ["content_script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "overlay/overlay.css",
        "overlay/overlay.js",
        "src/core/log.js",
        "src/core/parser.js",
        "src/core/selectors.js",
        "src/core/storage.js"
      ],
      "matches": ["https://www.upwork.com/*"]
    }
  ],
  "action": {
    "default_title": "Upwork Job Scout"
  }
}
